pkgname=('namebench2')
_srcname='namebench'
pkgver=r1060.7217712
pkgrel=1
pkgdesc='Provides personalized DNS server recommendations based on your browsing history'
arch=('any')
url='https://github.com/google/namebench'
license=('Apache')

depends=('')
makedepends=('git' 'go')
provides=('namebench')
conflicts=('namebench')

source=("$_srcname::git+https://github.com/google/namebench.git")
sha256sums=('SKIP')

pkgver() {
    cd "${srcdir}/${_srcname}"

    printf 'r%s.%s.%s\n' \
        "$( git rev-list --count 'HEAD' )" \
        "$( git log --max-count='1' --pretty='format:%ct' )" \
        "$( git rev-parse --short 'HEAD' )"
}

prepare() {
    export GOPATH="$srcdir/gopath"
    go get -v "github.com/mattn/go-sqlite3"
    go get -v "code.google.com/p/go.net/publicsuffix"
    go get -v "github.com/miekg/dns"
}

build() {
    cd "$srcdir/$_srcname"
    export GOPATH="$srcdir/gopath"
    go build namebench.go
}

package() {
    cd "$srcdir/$_srcname"
    install -D namebench "$pkgdir/usr/bin/namebench"
}
