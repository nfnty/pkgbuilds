# shellcheck disable=SC2034,SC2154,SC2164
pkgname=('python-ansicolor')
_srcname='ansicolor'
pkgdesc='A library to produce ansi color output and colored highlighting and diffing'
pkgver='0.2.4'
_pkgver_commit='597338e9f371b10a091719159a4b8e1bff6a4d53'
pkgrel='1'
arch=('any')
url="https://github.com/numerodix/${_srcname}"
license=('Apache')

depends=('python')
makedepends=('git' 'python-setuptools')
provides=("${pkgname[0]%-git}")
conflicts=("${pkgname[0]%-git}")

source=("${_srcname}::git+${url}.git#commit=${_pkgver_commit}")
sha512sums=('SKIP')

package() {
    cd "${srcdir}/${_srcname}"

    python setup.py install --root="${pkgdir}" --optimize=1
}
