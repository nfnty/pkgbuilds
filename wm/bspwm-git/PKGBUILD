pkgname=('bspwm-git')
srcname='bspwm'
pkgver='r1'
pkgrel='1'
pkgdesc='A tiling window manager based on binary space partitioning'
arch=('i686' 'x86_64')
url='https://github.com/nfnty/bspwm'
license=('custom:BSD')

depends=('libxcb' 'xcb-util' 'xcb-util-wm')
optdepends=('jansson')
makedepends=('git' 'jansson')
provides=('bspwm')
conflicts=('bspwm')

source=("${srcname}::git+https://github.com/nfnty/bspwm.git#branch=json")
sha512sums=('SKIP')

options=('!strip')

pkgver() {
    cd "${srcdir}/${srcname}"

    printf 'r%s.%s.%s\n' \
        "$( git rev-list --count 'HEAD' )" \
        "$( git log --max-count='1' --pretty='format:%ct' )" \
        "$( git rev-parse --short 'HEAD' )"
}

build() {
    cd "${srcdir}/${srcname}"

    make PREFIX='/usr' debug
}

package() {
    cd "${srcdir}/${srcname}"

    make PREFIX='/usr' DESTDIR="${pkgdir}" install
    install -D --mode=644 LICENSE "${pkgdir}/usr/share/licenses/${srcname}/LICENSE"
}
